API_ID=123456
API_HASH=your_telegram_api_hash
# Jalankan `scripts/generate_string_session.py` untuk membuat nilai ini.
STRING_SESSION=your_telethon_string_session

# File rules keyword (format JSON, dibuat otomatis setelah menjalankan !watch)
WATCH_RULES_FILE=watch_rules.json
# Jalankan perintah `!watch <chat_id>` lewat userbot untuk menambahkan rule.

# Opsional: batasi chat yang dipantau (pisahkan dengan koma, gunakan ID negatif untuk grup)
# WATCH_CHAT_IDS=-1001234567890,-100987654321

# Google Sheets
GOOGLE_SERVICE_ACCOUNT_FILE=credentials/service_account.json
# GOOGLE_SHEETS_SPREADSHEET_ID=your_spreadsheet_id  # Opsional, biarkan kosong untuk auto-create
GOOGLE_SHEETS_SPREADSHEET_TITLE=Personal Watcher Logs
GOOGLE_SHEETS_WORKSHEET=Sheet1
WATCHER_STATE_FILE=watcher_state.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/personal-userbot.log
LOG_MAX_BYTES=1048576
LOG_BACKUP_COUNT=5
LOCAL_TIMEZONE=Asia/Jakarta
IGNORE_SELF_MESSAGES=true
IGNORE_BOT_MESSAGES=true
